{
  "version": 2,
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "endpoints": [
    {
      "endpoint": "/categorized-movies",
      "querystring_params": [
        "api_key"
      ],
      "backend": [
        {
          "url_pattern": "/3/movie/popular",
          "encoding": "json",
          "sd": "static",
          "extra_config": {
            "github.com/devopsfaith/krakend/proxy": {
              "flatmap_filter": [
                {
                  "type": "move",
                  "args": [
                    "results.*.title",
                    "popular"
                  ]
                }
              ]
            }
          },
          "host": [
            "https://api.themoviedb.org"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}